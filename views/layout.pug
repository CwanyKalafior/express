doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=path == url ? 'item active' : 'item')=title
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('strona główna', '/')
        +item('aktualności', '/news')
        +item('quiz', '/quiz')
        +item('admin', '/admin')
    block content
